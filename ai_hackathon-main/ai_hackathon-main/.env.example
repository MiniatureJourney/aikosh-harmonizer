# AI (required for harmonization and PDF metadata)
GEMINI_API_KEY=your_gemini_api_key_here

# Upload limit in MB (default 25; Render free tier ~25MB body)
# MAX_UPLOAD_MB=25

# Auth (commercial: require login for upload/status/download)
# AUTH_ENABLED=true
# JWT_SECRET=your-secret-use-openssl-rand-hex-32
# JWT_EXPIRE_MINUTES=60
# AUTH_USERS_FILE=data/users.json   # optional: persist users to JSON file

# Optional: async processing (default: false)
# USE_CELERY=true
# REDIS_URL=redis://localhost:6379/0

# Optional: PostgreSQL (default: local JSON files)
# DATABASE_URL=postgresql://user:pass@host:5432/dbname

# Optional: S3 storage (default: local uploads/)
# USE_S3=true
# S3_BUCKET_NAME=your-bucket
# AWS_ACCESS_KEY_ID=...
# AWS_SECRET_ACCESS_KEY=...
# AWS_REGION=us-east-1
